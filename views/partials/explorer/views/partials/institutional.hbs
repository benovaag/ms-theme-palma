.accordion {
  color: #444;
  cursor: pointer;
  padding: 10px 0;
  margin: 35px 0;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
  transition: 0.4s;
  position: relative;
  border-bottom: 1px solid #dedede;
}
.accordion:first-of-type{
    margin-top: 0;
}
.accordion:after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 50%;
  height: 2px;
  background-color: #042D5A;
}
.accordion:before {
  content: '';
  background-image: url("data:image/svg+xml;base64,");
  background-size: 15px;
  background-repeat: no-repeat;
  width: 15px;
  height: 15px;
  color: #777;
  font-weight: bold;
  position: absolute;
  top: 20px;
  right: 0;
  transform: rotate(180deg);
  transition: ease-in-out .3s;
  filter: brightness(0);
}
.active:before {
  transform: rotate(0);
}
.panel {
  padding: 0 18px;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
}
.accordion-title{
    font: normal normal bold 18px/27px 'Jost';
    color: #000;
    text-transform: uppercase;
}
.accordion-content,
.panel p,
.panel ul,
